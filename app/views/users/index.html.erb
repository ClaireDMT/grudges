<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <a class="nav-link <%= 'active' if !params[:query].present? %>" id="friendships-tab" data-toggle="tab" href="#friendships" role="tab" aria-controls="friendships" aria-selected="true">Friendships</a>
  </li>
  <li class="nav-item" role="presentation">
    <a class="nav-link <%= 'active' if params[:query].present? %>" id="users-tab" data-toggle="tab" href="#users" role="tab" aria-controls="users" aria-selected="false">Find user</a>
  </li>
</ul>
<div class="tab-content" id="myTabContent">
  <div class="tab-pane fade <%= 'show active' if !params[:query].present? %>" id="friendships" role="tabpanel" aria-labelledby="friendships-tab">
    <% @friends.each do |friend| %>
      <p><%= friend.username %></p>
    <% end %>
  </div>
  <div class="tab-pane fade <%= 'show active' if params[:query].present? %>" id="users" role="tabpanel" aria-labelledby="users-tab">
    <%= form_tag users_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "search by username or email"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
    <% if params[:query].present? %>
      <% @users.each do |user| %>
        <p><%= user.username %></p>
      <% end %>
    <% end %>
  </div>
</div>
